{
    "version": "DIVA",
    "optimizer": {
		"otype": "Ema",
		"decay": 0.6,
		"nested": {
			"otype": "ExponentialDecay",
			"decay_start": 2000,
			"decay_interval": 1000,
			"decay_base": 0.8,
			"nested": {
				"otype": "Adam",
				"learning_rate": 1e-2,
				"beta1": 0.9,
				"beta2": 0.999,
				"epsilon": 1e-8,
				"l2_reg": 1e-6
			}
		}
	},
    "encoding": {
        "otype": "HashGrid",
        "n_levels": 8,
        "n_features_per_level": 4,
        "log2_hashmap_size": 15,
        "base_resolution": 4
    },
    "network": {
        "otype": "FullyFusedMLP",
        "activation": "ReLU",
